{
  "name": "quote-app",
  "version": "1.0.0",
  "description": "A single-page application that displays quotes as cards with a refresh button.",
  "main": "src/index.js",
  "homepage": "https://vilas-shivamallu.github.io/daily-quote",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "predeploy" : "npm run build",
    "deploy" : "gh-pages -d build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "indent": ["error", 4]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
